<div class="form-group">
  <div class="row">
    <div class="col-sm-2">Capabilities</div>
    <div class="col-sm-8">
      <%- ApiKey::CAPABILITIES.each do |cap, value| %>
      <div class="form-check">
          <%= check_box_tag "capabilities[#{cap}]", value, @model.send("#{cap}?"), class: 'form-check-input', id: "checkbox-#{ cap }" %>
          <label class="form-check-label" for="checkbox-<%= cap %>">
            <%= cap.humanize %>
          </label>
      </div>
      <%- end %>
    </div>
  </div>
</div>
<div class="form-group">
  <div class="row">
    <div class="col-sm-2">
      <%= form.label :custom_data %>
    </div>
    <div class="col-sm-10">
      <%= form.text_field :custom_data, class: 'form-control' %>
      <small id="helpInline" class="text-muted">
        Semicolon separated list of custom data. This is required when enabling the Read / Write custom data capabilities, and is a whitelist of custom attributes that will be permitted.
      </small>
    </div>
  </div>
